extends layout

block vars
    - var title = 'Sign In';

block content
    .row
        .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
            // Login panel
            .panel.panel-default
                .panel-heading
                    h2.panel-title Sign In
                .panel-body
                    p.alert.alert-warning KillrVideo admin resources are only available to DataStax employees. 
                    p Choose a login provider to sign in with.
                    hr
                    p: a.btn.btn-primary.btn-block(href='/auth/google')
                        i.fa.fa-google.fa-lg
                        |  Sign in with Google
                    p: a.btn.btn-primary.btn-block(href='/auth/github')
                        i.fa.fa-github.fa-lg
                        |  Sign in with GitHub
